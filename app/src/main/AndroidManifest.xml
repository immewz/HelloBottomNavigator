<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelloBottomNavigator"
        tools:targetApi="31">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activities.BottomNavigatorActivity"
            android:exported="true" />
        <activity
            android:name=".activities.BottomNavigationWithViewPagerActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AppBarBottomActivity"
            android:exported="true" />
        <activity
            android:name=".activities.BottomSheetActivity"
            android:exported="true"/>
        <activity
            android:name=".activities.OtherCommonUIElement"
            android:exported="true" />
        <activity
            android:name=".activities.CollapsingToolbarActivity"
            android:exported="true" />
        <activity
            android:name=".activities.CoordinatorActivity"
            android:exported="true" />
        <activity
            android:name=".activities.NavigationViewActivity"
            android:exported="true"/>
        <activity
            android:name=".activities.SwipeRefreshActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ConstraintActivity"
            android:exported="true" />
    </application>

</manifest>